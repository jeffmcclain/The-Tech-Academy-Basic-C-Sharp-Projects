<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5>Insurance Quote</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-6">
                    <label>First Name:</label>
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-6">
                    <label>Last Name:</label>
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-6">
                    <label>Email:</label>
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                <div class="form-group col-md-6">
                    <label>Date of Birth:</label>
                    <input name="DateOfBirth" type="date" class="form-control" placeholder="MM/DD/YYYY" />
                </div>
                <div class="form-group col-md-6">
                    <label>Car Year:</label>
                    <input name="CarYear" type="number" class="form-control" placeholder="ex. 2019" />
                </div>
                <div class="form-group col-md-6">
                    <label>Car Make:</label>
                    <input name="CarMake" type="text" class="form-control" placeholder="ex. AMC" />
                </div>
                <div class="form-group col-md-6">
                    <label>Car Model:</label>
                    <input name="CarModel" type="text" class="form-control" placeholder="ex. Pacer" />
                </div>
                <div class="form-group col-md-6">
                    <label>Number of Speeding Tickets:</label>
                    <input name="SpeedTickets" type="text" class="form-control" placeholder="ex. 25" />
                </div>
                <div class="form-group col-md-12 mt-3">
                    <label>Have you been convicted of a DUI?</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input ml-3" type="radio" name="DUI" id="inlineRadio1" value=false>
                        <label class="form-check-label" for="inlineRadio1">No</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="DUI" id="inlineRadio2" value=true>
                        <label class="form-check-label" for="inlineRadio2">Yes</label>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label>Do you want Full Coverage?</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input ml-3" type="radio" name="FullCoverage" id="inlineRadio3" value=false>
                        <label class="form-check-label" for="inlineRadio3">No</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="FullCoverage" id="inlineRadio4" value=true>
                        <label class="form-check-label" for="inlineRadio4">Yes</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }
        </div>
    </div>
</div>